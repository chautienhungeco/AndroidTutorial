<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/toolBarSearh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:paddingVertical="@dimen/_8dp"
            android:background="@color/gray"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginStart="@dimen/_8dp"
                android:elevation="@dimen/_4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_search_64"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingStart="@dimen/_8dp"
                android:text="Tìm người liên hệ"
                android:textSize="@dimen/_16sp"
                android:textColor="#888888"/>

            <ImageView
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:elevation="@dimen/_4dp"
                android:src="@drawable/ic_mic_64"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/add_new_contact"
            android:textColor="#197602"
            android:textSize="@dimen/_16sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDataPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/footerBar"
        app:layout_constraintTop_toBottomOf="@+id/toolBarSearh"
        tools:listitem="@layout/activity_info_contact" />

    <LinearLayout
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:orientation="horizontal"
        android:background="@color/gray"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/btnLove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_16dp">

            <TextView
                android:id="@+id/tvLove"
                style="@style/TextCustomBoldBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_star"
                android:text="@string/love"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnRecently"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvRecently"
                style="@style/TextCustomBoldBlack"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_oclock"
                android:text="@string/love"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnPhoneBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvPhoneBook"
                style="@style/TextCustomBoldBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_person"
                android:text="@string/love"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>