<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_24dp"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="@dimen/_8dp" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_24dp"
        android:text="ID Task:\nInstance ID:"
        android:textColor="#607D8B"
        android:textSize="@dimen/_14sp" />

    <Button
        android:id="@+id/btnGoToStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đi đến standardActivity"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/_8dp"/>

    <Button
        android:id="@+id/btnGoToSingleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF59"
        android:text="Đến singleTopActivity"
        android:layout_marginBottom="@dimen/_8dp"/>

    <Button
        android:id="@+id/btnGoToSingleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8dp"
        android:backgroundTint="#F44336"
        android:text="ến singleTaskActivity"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnGoToSingleInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:text="Đến singleInstanceActivity"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn thành Activity"
        android:textColor="@color/white"
        android:backgroundTint="#795548"/>

</LinearLayout>