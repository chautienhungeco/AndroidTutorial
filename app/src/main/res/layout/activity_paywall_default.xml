<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_paywall"
    tools:context=".present.PayWallActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bgLottieAnimation"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_0dp"
        app:layout_constraintDimensionRatio="0.75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/compress_pw_50" />

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="@android:color/transparent"
        android:elevation="@dimen/_4sdp"
        android:src="@drawable/ic_close_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <View
                android:id="@+id/viewSpaceContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewBackgroundContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_106sdp"
                android:background="@drawable/bg_border_footer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewSpaceContent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOptimizeStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:gravity="center"
                android:text="@string/optimize_storage"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewSpaceContent" />

            <View
                android:id="@+id/viewSubContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_viewsub_container"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/viewBackgroundContent"
                app:layout_constraintTop_toBottomOf="@id/txtOptimizeStorage" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/gradient_button_claim"
                android:drawableBottom="@drawable/ic_loading"
                android:paddingBottom="@dimen/_12sdp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewSubContainer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNotFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:fontFamily="@font/funnelsans_semibold"
                android:gravity="center"
                android:text="@string/not_found"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14sdp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtOptimizeStorage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTryAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_109sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/funnelsans_medium"
                android:gravity="center"
                android:text="@string/try_again"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNotFound" />

            <LinearLayout
                android:id="@+id/headerPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtOptimizeStorage">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPrice899"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/funnelsans_semibold"
                    android:text="@string/_899_week"
                    android:textColor="#AAAAAA"
                    android:textDirection="firstStrong"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/funnelsans_regular"
                    android:text="@string/week"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtOFF50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:background="@drawable/bg_corner_off"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/off_50"
                    android:textColor="#EAF5F8"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_week"
                android:textColor="#EAF5F8"
                android:textSize="@dimen/_36ssp"
                android:visibility="invisible"
                app:fontFamily="@font/funnelsans_extrabold"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintEnd_toStartOf="@id/txtNewWeekPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerPrice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNewWeekPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_price"
                android:textColor="#EAF5F8"
                android:textSize="@dimen/_24ssp"
                android:visibility="invisible"
                android:paddingTop="@dimen/_12sdp"
                app:fontFamily="@font/funnelsans_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtNewPrice"
                app:layout_constraintTop_toBottomOf="@id/headerPrice" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClaimOffer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/gradient_button_claim"
                android:fontFamily="@font/funnelsans_extrabold"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:text="@string/claim_offer"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNewPrice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPaymentDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/funnelsans_medium"
                android:gravity="center"
                android:paddingStart="@dimen/_28sdp"
                android:paddingEnd="@dimen/_28sdp"
                android:text="@string/description_claim"
                android:textColor="#EAF5F8"
                android:textSize="@dimen/_10ssp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnClaimOffer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPolicyPaywall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/funnelsans_semibold"
                android:gravity="center"
                android:paddingStart="@dimen/_14sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:text="@string/string_policy"
                android:textColor="#80EAF5F8"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnLoading" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>