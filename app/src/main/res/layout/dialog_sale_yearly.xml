<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    tools:context=".present.Dialog30ActivityYear">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@android:color/white"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cstBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_background_dim"
            android:paddingBottom="@dimen/_20sdp">

            <ImageButton
                android:id="@+id/btnCloseYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_36sdp"
                android:background="@drawable/ic_close_btn_blue"
                android:elevation="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBackgroundYear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_110sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/img_dialog_year"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="H,1:1.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLogoV9Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_38sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_logo_v9_year"
                app:layout_constraintEnd_toEndOf="@id/imgBackgroundYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"
                app:layout_constraintTop_toTopOf="@id/imgBackgroundYear" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSubtitleYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#6015132F"
                android:fontFamily="@font/funnelsans_extrabold"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/subtitle"
                android:textColor="#EAF5F8"
                android:textSize="@dimen/_14ssp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="@+id/imgBackgroundYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"
                app:layout_constraintTop_toBottomOf="@id/imgLogoV9Year" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt30persen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableRight="@drawable/ic_number_30_persen"
                android:fontFamily="@font/funnelsans_extrabold"
                app:layout_constraintEnd_toEndOf="@+id/imgBackgroundYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"
                app:layout_constraintTop_toBottomOf="@id/txtSubtitleYear" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableRight="@drawable/ic_off_year"
                app:layout_constraintEnd_toEndOf="@+id/imgBackgroundYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"
                app:layout_constraintTop_toBottomOf="@id/txt30persen" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTrialOfferYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/bg_dialog_year"
                android:fontFamily="@font/funnelsans_semibold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:text="@string/trial3day"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgBackgroundYear" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClaimOfferYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/gardient_claim_offer_year"
                android:fontFamily="@font/funnelsans_extrabold"
                android:text="@string/btn_claim_offer"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp"
                android:visibility="invisible"
                android:minHeight="@dimen/_48sdp"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTrialOfferYear" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLoadClaimOfferYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/gardient_claim_offer_year"
                android:drawableRight="@drawable/ic_loading"
                android:paddingHorizontal="@dimen/_125sdp"
                android:visibility="invisible"
                android:minHeight="@dimen/_48sdp"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTrialOfferYear" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNotFoundYearly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/funnelsans_semibold"
                android:gravity="center"
                android:text="@string/not_found"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBackgroundYear" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTryAgain30Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/funnelsans_medium"
                android:gravity="center"
                android:text="@string/try_again"
                android:textColor="#FFFFFF"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNotFoundYearly" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPolicy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/funnelsans_regular"
                android:gravity="center_horizontal"
                android:paddingHorizontal="@dimen/_14sdp"
                android:lineSpacingExtra="@dimen/_2ssp"
                android:text="@string/policy_yearly"
                android:textColor="#EAF5F8"
                android:textSize="@dimen/_8ssp"
                android:maxLines="10"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnClaimOfferYear" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>