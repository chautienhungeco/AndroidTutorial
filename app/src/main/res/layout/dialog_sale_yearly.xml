<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    tools:context=".present.Dialog30ActivityYear">

    <ImageButton
        android:id="@+id/btnCloseYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="@drawable/ic_close_btn_blue"
        android:elevation="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDialogContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/dialog_background_dim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBackgroundYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_110sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_300sdp"
                android:background="@drawable/img_dialog_year"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLogoV9Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_38sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_logo_v9_year"
                app:layout_constraintEnd_toEndOf="@id/imgBackgroundYear"
                app:layout_constraintTop_toTopOf="@id/imgBackgroundYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSubtitleYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:background="#6015132F"
                android:layout_marginHorizontal="@dimen/_36sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingTop="@dimen/_6sdp"
                android:fontFamily="@font/funnelsans_extrabold"
                android:text="@string/subtitle"
                android:textColor="#EAF5F8"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="@+id/imgBackgroundYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"
                app:layout_constraintTop_toBottomOf="@id/imgLogoV9Year" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt30persen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_number_30_persen"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/funnelsans_extrabold"
                app:layout_constraintEnd_toEndOf="@+id/imgBackgroundYear"
                app:layout_constraintTop_toBottomOf="@id/txtSubtitleYear"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:drawableRight="@drawable/ic_off_year"
                app:layout_constraintEnd_toEndOf="@+id/imgBackgroundYear"
                app:layout_constraintTop_toBottomOf="@id/txt30persen"
                app:layout_constraintStart_toStartOf="@id/imgBackgroundYear"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTrialOfferYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/bg_dialog_year"
                android:fontFamily="@font/funnelsans_semibold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:text="@string/trial3day"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/imgBackgroundYear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClaimOfferYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/gardient_claim_offer_year"
                android:fontFamily="@font/funnelsans_extrabold"
                android:text="@string/btn_claim_offer"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTrialOfferYear" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLoadClaimOfferYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/gardient_claim_offer_year"
                android:fontFamily="@font/funnelsans_extrabold"
                android:drawableRight="@drawable/ic_loading"
                android:paddingHorizontal="@dimen/_125sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14ssp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/txtPolicy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgBackgroundYear" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:fontFamily="@font/funnelsans_semibold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/_2ssp"
                android:paddingHorizontal="@dimen/_18sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:text="@string/policyOfYear"
                android:textColor="#4D5A68"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnClaimOfferYear" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>