<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_string"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_32dp"/>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:autofillHints="name" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/_12dp"
        android:autofillHints="password" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="1"
        android:layout_marginTop="@dimen/_12dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_login_string"
        android:layout_marginTop="@dimen/_24dp"/>

    <TextView
        android:id="@+id/tvMessageOutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="2"
        android:layout_marginTop="@dimen/_24sp"/>

    <Button
        android:id="@+id/btnDemoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/demo_layout_string"
        android:layout_marginTop="@dimen/_24dp"/>

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_book"
        android:layout_marginTop="@dimen/_24dp"/>

    <Button
        android:id="@+id/btnPaywall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Wall"
        android:layout_marginTop="@dimen/_24dp"/>

    <Button
        android:id="@+id/btnDialog30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog30"
        android:layout_marginTop="@dimen/_24dp"/>

    <Button
        android:id="@+id/btnDialog30Year"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Dialog30Year" />

    <Button
        android:id="@+id/btnUnlockFeature"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Unlock Feature" />
</LinearLayout>