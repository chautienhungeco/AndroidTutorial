<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_32dp"
        android:text="@string/login_string"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:autofillHints="password"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:text="1"
        android:textColor="#FF0000"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/button_login_string"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvMessageOutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sp"
        android:text="2"
        android:textColor="@color/black"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDemoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/demo_layout_string"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/phone_book"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnPaywall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Pay Wall"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnDialog30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Dialog30"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnDialog30Year"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Dialog30Year"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnUnlockFeature"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Unlock Feature"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnPaywallOnboard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="Paywall Onboard" android:visibility="visible"/>

    <Button
        android:id="@+id/btnFocusYearlyPrice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="FocusYearlyPrice"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnFocusYearlyBottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_24dp"
        android:text="FocusYearlyBottomSheet"
        android:visibility="visible"/>

</LinearLayout>
